import os
import logging
import paho.mqtt.client as mqtt
import json  # JSON 처리를 위해 추가
import csv   # CSV 파일 저장을 위해 추가
from datetime import datetime # 시간 기록을 위해 추가

# 로그 설정
logging.basicConfig(
    level=logging.INFO,
    format='%(asctime)s [%(levelname)s] %(message)s'
)

# 환경 변수 설정
FLEET = os.getenv("FLEET", "lab")
MQTT_BROKER = os.getenv("MQTT_BROKER", "localhost")
MQTT_PORT = int(os.getenv("MQTT_PORT", 1883))

# 저장할 파일 이름
CSV_FILE = "sensor_data.csv"

# CSV 파일 헤더(제목) 작성 함수
def init_csv():
    if not os.path.exists(CSV_FILE):
        with open(CSV_FILE, mode='w', newline='') as file:
            writer = csv.writer(file)
            # 엑셀 맨 윗줄 제목
            writer.writerow(["Timestamp", "Temp_Air", "Humidity", "Temp_Water", "CDS1", "CDS2"])

def on_connect(client, userdata, flags, rc):
    if rc == 0:
        logging.info("MQTT 브로커 연결 성공")
        # ESP32 코드와 토픽을 일치시킴
        topic = "farm/sensor/data"
        client.subscribe(topic)
        logging.info(f"토픽 구독: {topic}")
    else:
        logging.error(f"연결 실패, 코드: {rc}")

def on_message(client, userdata, message):
    try:
        # 1. 받은 메시지를 문자열로 변환
        payload_str = message.payload.decode('utf-8')
        logging.info(f"데이터 수신: {payload_str}")

        # 2. JSON 문자열을 파이썬 딕셔너리로 변환 (해석)
        data = json.loads(payload_str)

        # 3. 현재 시간 가져오기
        now = datetime.now().strftime("%Y-%m-%d %H:%M:%S")

        # 4. CSV 파일에 한 줄 추가 (append 모드 'a')
        with open(CSV_FILE, mode='a', newline='') as file:
            writer = csv.writer(file)
            writer.writerow([
                now,
                data.get("temp_air"),
                data.get("humidity"),
                data.get("temp_water"),
                data.get("cds1"),
                data.get("cds2")
            ])
        logging.info(">> 파일 저장 완료")

    except Exception as e:
        logging.error(f"데이터 저장 중 오류 발생: {e}")

def on_disconnect(client, userdata, rc):
    logging.warning(f"연결 끊김, 코드: {rc}")

if __name__ == "__main__":
    init_csv() # 프로그램 시작 시 CSV 파일 준비
    
    client = mqtt.Client()
    client.on_connect = on_connect
    client.on_message = on_message
    client.on_disconnect = on_disconnect
    
    try:
        logging.info(f"브로커 연결 시도: {MQTT_BROKER}:{MQTT_PORT}")
        client.connect(MQTT_BROKER, MQTT_PORT, 60)
        logging.info("데이터 수집 중... (sensor_data.csv에 저장됨)")
        client.loop_forever()
        
    except KeyboardInterrupt:
        logging.info("프로그램 종료")
        client.disconnect()
    except Exception as e:
        logging.error(f"오류 발생: {e}")
        client.disconnect()
